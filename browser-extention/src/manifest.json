{
    "manifest_version": 3,
    "name": "Security Training Quiz",
    "version": "1.0",
    "description": "Security awareness training through quizzes",
    "permissions": [
      "webNavigation",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "https://your-xthreat-domain.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }]
  }